<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}}</title>
    <link rel=stylesheet href="styles.css">
</head>
<body>
    <h1>{{name}}</h1>
    <p>{{description}}</p>
    <form action="/{{id}}" method="post">
    {{#each inputs }}
    <label for="{{this.name}}">{{this.label}}</label>
        <input 
        type="{{this.type}}" 
        name="{{this.name}}" 
        id="{{this.name}}" 
        {{#if this.required}} required {{/if}} 
        {{#if this.min}}min="{{this.min}}"{{/if}}
        {{#if this.max}}max="{{this.max}}"{{/if}}></br>
    {{/each}}
    <button type="submit">Berechnen</button>
    </form>
    {{#if clientEval}}
    <p>{{rawCalc}}</p>
    {{/if}}
</body>
</html>